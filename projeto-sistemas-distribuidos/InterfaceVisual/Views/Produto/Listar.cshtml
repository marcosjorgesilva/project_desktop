@model IEnumerable<InterfaceVisual.Models.Produto>
<section class="content-header">
    <h1>
        Produto
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Produto</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Lista de Produtos</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Tamanho</th>
                                <th>Estoque</th>
                                <th>Valor do Produto</th>
                                <th>Categoria</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Tamanho)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Estoque)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ValorProduto)</td>
                                    <td>@Html.DisplayFor(modelItem => item.IdCategoria)</td>
                                    <td>
                                        <a href="Produto/Atualizar(@item.IdProduto)">Atualizar</a> 
                                    |   <a href="" onclick="Apagar(@item.IdProduto)">Apagar</a>
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
    /*
    $(function () {
        $('#example1').DataTable();
    });
    */
    function Apagar(id){
        alert(id)
        var txt;
        var r = confirm("Deseja mesmo apagar este produto?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Apagar", "Produto")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl="/Index";
                        window.location.reload();
                    }
                    else {
                        alert("Não foi possivel apagar o registro desejado, tente novamente mais tarde!");
                    }
                }
            });
        }
    }
</script>