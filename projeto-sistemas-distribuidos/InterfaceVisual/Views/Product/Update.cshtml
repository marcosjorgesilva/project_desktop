@model InterfaceVisual.Models.Produto

@{
    ViewData["Update"] = "Atualizar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Atualizar
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Atualizar Produto</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/Produto/UpdateProduto">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="Email" class="form-control" name="Nome" value="@Model.Nome">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Tamanho</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Tamanho" placeholder="Tamanho" value="@Model.Tamanho">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Estoque</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Estoque" placeholder="Estoque" value="@Model.Estoque">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Valor do Produto</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Valor do Produto" placeholder="ValorProduto" value="@Model.ValorProduto">
                    </div>
                </div>
                <input type="hidden" name="IdProduto" value="@Model.IdProduto" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancelar</button>
                <button type="submit" class="btn btn-info pull-right">Atualizar</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>